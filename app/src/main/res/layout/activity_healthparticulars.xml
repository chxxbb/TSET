                            android:text="腹泻"
                            android:textColor="#eb686c"
                            android:textSize="@dimen/y23" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_tag12"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/y70"
                        android:layout_marginLeft="@dimen/x20"
                        android:background="@drawable/healthcondition_rbtn_unmep_redcase"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/x20"
                            android:layout_marginRight="@dimen/x20"
                            android:text="腹疼"
                            android:textColor="#eb686c"
                            android:textSize="@dimen/y23" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_tag13"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/y70"
                        android:layout_marginLeft="@dimen/x20"
                        android:background="@drawable/healthcondition_rbtn_unmep_redcase"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/x20"
                            android:layout_marginRight="@dimen/x20"
                            android:text="腹胀"
                            android:textColor="#eb686c"
                            android:textSize="@dimen/y23" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_tag14"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/y70"
                        android:layout_marginLeft="@dimen/x20"
                        android:background="@drawable/healthcondition_rbtn_unmep_redcase"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/x20"
                            android:layout_marginRight="@dimen/x20"
                            android:text="呕吐"
                            android:textColor="#eb686c"
                            android:textSize="@dimen/y23" />
                    </LinearLayout>


                </LinearLayout>


            </HorizontalScrollView>

            <TextView
                android:id="@+id/tv_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/y40"
                android:layout_marginTop="@dimen/y24"
                android:textColor="@color/fontgray"
                android:textSize="@dimen/y28" />

        </LinearLayout>

    </android.support.v7.widget.CardView>


</LinearLayout>
