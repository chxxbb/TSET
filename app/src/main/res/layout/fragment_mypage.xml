<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f4f4f4"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y286">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x30"
            android:layout_marginTop="@dimen/y96"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="@dimen/x130"
                android:layout_height="@dimen/y130"
                app:civ_border_color="#ffff"
                app:civ_border_width="@dimen/x5" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/x30"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="且听风鸣"
                    android:textColor="#323232"
                    android:textSize="@dimen/x36" />

                <Button
                    android:layout_width="@dimen/x130"
                    android:layout_height="@dimen/y32"
                    android:layout_marginTop="@dimen/y14"
                    android:background="@drawable/qqregister_btn_case"
                    android:text="QQ用户登录"
                    android:textColor="#6fc9e6"
                    android:textSize="@dimen/x20" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/iv_set"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true">

            <ImageView
                android:layout_width="@dimen/x48"
                android:layout_height="@dimen/y46"
                android:layout_marginRight="@dimen/x30"
                android:layout_marginTop="@dimen/y25"
                android:src="@drawable/mypage_set" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="@dimen/x18"
                android:layout_height="@dimen/y28"
                android:layout_marginRight="@dimen/x30"
                android:src="@drawable/mypage_skip" />
        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y90"
        android:background="#ffffff"
        android:gravity="center_vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/x50"
                android:layout_height="@dimen/y50"
                android:layout_marginLeft="@dimen/x30"
                android:src="@drawable/mypage_order" />

