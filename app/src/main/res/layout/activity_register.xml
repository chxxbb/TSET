<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">
    <RelativeLayout
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y96"
        android:orientation="horizontal"
        >
        <ImageView
            android:layout_marginLeft="@dimen/x30"
            android:layout_width="@dimen/x20"
            android:layout_height="@dimen/y36"
            android:src="@drawable/register_03"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">
            <TextView
                android:textColor="#bbbbbb"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="注册账号"
                android:textSize="@dimen/x36"/>
        </LinearLayout>
    </RelativeLayout>
    <LinearLayout
        android:background="@drawable/register_et_case"
        android:gravity="center_vertical"
        android:layout_marginTop="@dimen/y40"
        android:layout_marginRight="@dimen/x30"
        android:layout_marginLeft="@dimen/x30"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y80"
        android:orientation="horizontal">
        <ImageView
            android:layout_marginLeft="@dimen/x20"
            android:layout_width="@dimen/x32"
            android:layout_height="@dimen/y44"
            android:src="@drawable/register_04"
            />
        <EditText
            android:cursorVisible="false"
            android:inputType="phone"
            android:textColorHint="#ffffff"
            android:layout_marginLeft="@dimen/x20"
            android:hint="请输入手机号"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:maxLength="11"/>
    </LinearLayout>
    <LinearLayout
        android:background="@drawable/register_et_case"
        android:layout_marginRight="@dimen/x30"
        android:gravity="center_vertical"
        android:layout_marginTop="@dimen/y40"
        android:layout_marginLeft="@dimen/x30"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y80"
        android:orientation="horizontal">
        <ImageView
            android:layout_marginLeft="@dimen/x20"
            android:layout_width="@dimen/x32"
            android:layout_height="@dimen/y44"
            android:src="@drawable/register_06"
            />
        <EditText
            android:cursorVisible="false"
            android:maxLength="16"
            android:inputType="textPassword"
            android:textColorHint="#ffffff"
            android:layout_marginLeft="@dimen/x20"
            android:hint="请输入密码"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"/>
    </LinearLayout>
    <LinearLayout
        android:background="@drawable/register_et_case"
        android:layout_marginRight="@dimen/x30"
        android:gravity="center_vertical"
        android:layout_marginTop="@dimen/y40"
        android:layout_marginLeft="@dimen/x30"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y80"
        android:orientation="horizontal">
    <ImageView
        android:layout_marginLeft="@dimen/x20"
        android:layout_width="@dimen/x32"
        android:layout_height="@dimen/y44"
        android:src="@drawable/register_06"
        />
    <EditText
        android:cursorVisible="false"
        android:maxLength="16"
        android:inputType="textPassword"
        android:textColorHint="#ffffff"
        android:layout_marginLeft="@dimen/x20"
        android:hint="请确认密码"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"/>
</LinearLayout>

    <LinearLayout
        android:layout_marginTop="@dimen/y40"
        android:layout_marginLeft="@dimen/x30"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y80"
        android:orientation="horizontal">
        <LinearLayout
            android:background="@drawable/register_et_case"
            android:gravity="center_vertical"
            android:layout_width="@dimen/x420"
            android:layout_height="@dimen/y80">
            <ImageView
                android:layout_marginLeft="@dimen/x20"
                android:layout_width="@dimen/x32"
                android:layout_height="@dimen/y44"
                android:src="@drawable/register_07"
                />
            <EditText
                android:cursorVisible="false"
                android:maxLength="4"
                android:inputType="phone"
                android:textColorHint="#ffffff"
                android:layout_marginLeft="@dimen/x20"
                android:hint="输入验证码"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"/>
        </LinearLayout>
        <Button
            android:textSize="@dimen/x32"
            android:textColor="#6fc9e6"
            android:background="@drawable/verification_btn_case"
            android:text="获取验证码"
            android:layout_marginLeft="@dimen/x20"
            android:layout_width="@dimen/x220"
            android:layout_height="@dimen/y80" />
    </LinearLayout>
    <Button
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:layout_marginLeft="@dimen/x30"
        android:layout_marginRight="@dimen/x30"
        android:background="@drawable/countersign_btn_case"
        android:layout_marginTop="@dimen/y40"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y80"
        android:text="完  成"
        />

</LinearLayout>
