<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.example.chen.tset.View.DoctorparticularsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/ll_return"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/doctorparticulars_background"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/x20"
                            android:layout_height="@dimen/y36"
                            android:layout_marginLeft="@dimen/x30"
                            android:layout_marginTop="@dimen/y33"
                            android:src="@drawable/doctorparticulars_return" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/x8"
                            android:layout_marginTop="@dimen/y30"
                            android:text="返回"
                            android:textColor="@color/white"
                            android:textSize="@dimen/y32" />
                    </LinearLayout>


                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/y284"
                    android:background="@color/white">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/x30"
                            android:layout_marginTop="@dimen/y100"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/fontcolor"
                                android:textSize="@dimen/y36" />

                            <TextView
                                android:id="@+id/tv_grade"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/x26"
                                android:text="9.9分"
                                android:textColor="#fa898e"
                                android:textSize="@dimen/y34" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/x30"
                                android:layout_marginTop="@dimen/y15"
                                android:textColor="@color/xmgray"
                                android:textSize="@dimen/y28" />

                            <TextView
                                android:id="@+id/tv_section"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/x36"
                                android:layout_marginTop="@dimen/y15"
                                android:textColor="@color/xmgray"
                                android:textSize="@dimen/y28" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/tv_hospital"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="@dimen/y30"
                                android:layout_marginLeft="@dimen/x30"
                                android:layout_marginTop="@dimen/y16"
                                android:textColor="@color/xmgray"
                                android:textSize="@dimen/y28" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/ll_chatmoney"
                            android:layout_width="@dimen/x205"
                            android:layout_height="@dimen/y74"
                            android:background="@drawable/doctorparticulars_chat_case"
                            android:gravity="center_horizontal">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent">

                                <TextView
                                    android:id="@+id/btn_chatmoney"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/y25"
                                    android:text="￥ 25/次"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/y25" />

                            </LinearLayout>
                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="@dimen/x205"
                            android:layout_height="@dimen/y70"
                            android:layout_marginBottom="@dimen/y30"
                            android:layout_marginRight="@dimen/x30"
                            android:layout_marginTop="@dimen/y18"
                            android:background="@drawable/doctorparticulars_phone_case"
                            android:gravity="center_horizontal">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent">

                                <TextView
                                    android:id="@+id/btn_callmoney"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/y25"
                                    android:text="￥ 25/10分钟"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/y25" />

                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/iv_icon"
                android:layout_width="@dimen/x150"
                android:layout_height="@dimen/y150"
                android:layout_marginLeft="@dimen/x30"
                android:layout_marginTop="@dimen/y175"
                android:src="@color/backgroundblue"
                app:civ_border_color="@color/white"
                app:civ_border_width="@dimen/x5" />

        </FrameLayout>

        <ListView
            android:id="@+id/lv_docttorparticulas"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:overScrollMode="never"

            ></ListView>
    </LinearLayout>

    <RelativeLayout

        android:id="@+id/rl_nonetwork"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/y300"
        android:background="@color/white"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y100"
                android:src="@drawable/loadfail" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y50"
                android:text="内容被外星人劫持了"
                android:textColor="@color/linegray"
                android:textSize="@dimen/y32" />
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_loading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_lading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/loading" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/y50"
                android:text="内容加载中"
                android:textColor="@color/linegray"
                android:textSize="@dimen/y32" />
        </LinearLayout>
    </RelativeLayout>


</FrameLayout>

